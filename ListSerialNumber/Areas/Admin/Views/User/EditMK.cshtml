@model List<ListClass.Model.User>
@using (Html.BeginForm("EditMK", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>ĐỔI MẬT KHẨU</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td width="340px">
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" }) 
                            @Html.TextBox("ids[" + i + "].Password", Model[i].Password, new { @class = "form-control", required = "required" ,type="password"})
                        </td> 
                    </tr> 

                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a class="form-control form-a-control-delete" style="text-decoration:none;" href="#" onclick="closeEditModal()"><span class="fas">(X) Cancel</span></a>
                </div>
            </div>
        </div>
    </section>
}

