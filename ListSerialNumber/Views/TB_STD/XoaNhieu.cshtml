@model List<ListClass.Model.TB_STD>
@{
    ViewBag.Title = "Xóa thông tin";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@using (Html.BeginForm("XoaNhieu", "TB_STD", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="content-wrapper">
        <section>
            <div class="container" style="margin-top:20px">
                <strong style="color:red">BẠN CÓ CHẮC MUỐN XÓA KHÔNG</strong>
            </div> 
        </section>
        <!-- Main content -->
        <section class="content py-2">
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-2" style="width:auto">
                                    <a class="form-control" style="text-decoration:none;" href="@Url.Action("Index","TB_STD",new {id = Model.FirstOrDefault()?.Id_BienBanHieuChuan})"><span class="fas fa-backward"> Trở về</span></a>
                                </div>
                                <div class="col-md-2" style="width: auto;">
                                    <button class="form-control" type="submit" value="Edit">
                                        <span class="fas fa-trash" style="color:red"> Xóa vĩnh viễn</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="center">
                                    <th colspan="6">#</th>
                                </tr>
                                <tr>
                                    <td>
                                        <label>Id</label>
                                        @Html.TextBox("ids[" + i + "].Id", Model[i].ID, new { @readonly = "readonly", @class = "form-control" })
                                    </td>
                                    <td>
                                        <label>Id_BienBanHieuChuan</label>
                                        @Html.TextBox("ids[" + i + "].Id_BienBanHieuChuan", Model[i].Id_BienBanHieuChuan, new { @readonly = "readonly", @class = "form-control" })
                                    </td>
                                    <td>
                                        <label>ID_STD</label><br />
                                        @Html.TextBox("ids[" + i + "].ID_STD", Model[i].ID_STD, new { @readonly = "readonly", @class = "form-control" })
                                    </td>
                                    <td>
                                        <label>MucKiemTra</label><br />
                                        @Html.TextBox("ids[" + i + "].MucKiemTra", Model[i].MucKiemTra, new { @readonly = "readonly", @class = "form-control" })
                                    </td>
                                    <td>
                                        <label>TrungBinh_STD</label>
                                        @Html.TextBox("ids[" + i + "].TrungBinh_STD", Model[i].TrungBinh_STD.Value.ToString("F3"), new { @readonly = "readonly", @class = "form-control" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>

}

