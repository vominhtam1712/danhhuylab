    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script src="~/Public/Js/lockCopy.js"></script>
    <script src="~/Public/Js/MainMenu.js"></script>
    <script src="~/Public/Js/Lich.js"></script>
