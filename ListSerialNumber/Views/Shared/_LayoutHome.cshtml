                                <a href="@Url.Action("Index", "Phieuyeucauhieuchuan")">Yêu cầu hiệu chuẩn</a>
                                <a href="@Url.Action("Index", "PhieuChuyenMauHieuChuan")">Chuyển thiết bị</a>
                                <a href="@Url.Action("Index", "Phieutrathietbi")">Trả thiết bị</a>
                                <a href="@Url.Action("Index", "LuuInHoSo")">Lưu, in hồ sơ</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="dropbtn">Hiệu chuẩn thiết bị</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Index", "PhieuyeucauhieuchuanDoi")">Tiếp nhận</a>
                                <a href="@Url.Action("Index", "PhanCong")">Phân công</a>
                                <a href="@Url.Action("ThucHien", "PhanCong")">Thực hiện</a>
                                <a href="@Url.Action("Index", "Giaychungnhan")">Giấy chứng nhận</a>
                                <a href="@Url.Action("Index", "BaoCaoSuaChua")">Báo cáo sửa chữa</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="dropbtn">Quản lý thiết bị</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Index", "DanhMucThietBi")">Danh sách thiết bị</a>
                                <a href="@Url.Action("Index", "KeHoachHieuChuan_Form")">Kế hoạch hiệu chuẩn</a>
                                <a href="@Url.Action("Index", "BaoCaoDanhGia")">Báo cáo đánh giá</a>
                                <a href="@Url.Action("Index", "NhatKyBaoTriVaSuChua")">Nhật ký bảo trì, sửa chữa</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="dropbtn"><a style="color:#fff" href="@Url.Action("Index", "QuyTrinhISO")">Quy trình ISO</a></button>
                        </div>
                        <div class="dropdown">
                            <button class="dropbtn"><a style="color:#fff" href="@Url.Action("Details", "PhieuTheoDoiNhietDo")">t&#186; phòng Lab</a></button>
                        </div>
                        <div class="dropdown">
                            <button class="dropbtn">Tài khoản</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Index", "Companys")">Tài khoản</a>
                                <a href="@Url.Action("Index", "Role")">Quyền</a>
                                <a href="@Url.Action("Index", "ThanhVien", new { companyId = Session["CompanyId"] })">Thành viên</a>
                            </div>
                        </div>
                        <button class="btnLogin-popup" onclick="window.location.href='@Url.Action("LogoutAccount", "Account")'">Đăng xuất</button>
                    </div>
                    <span class="icon-close-menu" id="iconCloseMenu">
                        <ion-icon name="arrow-up-outline"></ion-icon>
                    </span>
                </header>
                <span class="icon-one-menu" id="iconOneMenu">
                    <ion-icon name="arrow-down-outline"></ion-icon>
                </span>
            </div>
        </div>
    </section>
    <section class="maincontent clearfix">
        <div id="loading"> 
            <img src="~/Public/Img/ZC9Y.gif"  alt="Loading..." />
            <p>Đang tải ...</p>
