<body> 
    <section class="header clearfix">
        <div class="container py-2">
            <div class="row wrapper-menu-row">
                <header class="wrapper-menu menu-group" id="wrapperMenu">
                    
                    <h2 class="logo">
                        <a style="color:#fff" href="@Url.Action("Index", "Home")"><img src="~/Public/Img/logodanhhuy_iso_2.png" width="250" height="100" /></a>
                    </h2>
                    <label for="menu-toggle" class="icons">
                        <ion-icon name="menu"></ion-icon>
                    </label>
                    <input type="checkbox" id="menu-toggle" class="menu-toggle">
                    <div class="navigation">
                        <div class="dropdown">
                            <button class="dropbtn">Hàng hóa</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Index", "ListNumber")">Hàng hóa</a>
                                <a href="@Url.Action("Index", "LampSystem")">Lamp Systems</a>
                                <a href="@Url.Action("Index", "BulbSpectrum")">Bulb Spectrum</a>
                            </div>

                        </div>
                        <div class="dropdown">
                            <button class="dropbtn">Khách hàng</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Index", "KhachHang")">Khách hàng</a>
                                <a href="@Url.Action("Index", "TapDoan")">Tập đoàn</a>
                                <a href="@Url.Action("Index", "KhuVuc")">Khu vực</a>
                            </div>

                        </div>
                        <div class="dropdown">
                            <button class="dropbtn">Quản lý hiệu chuẩn</button>
