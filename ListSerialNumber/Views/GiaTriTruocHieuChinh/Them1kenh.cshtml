@model List<ListClass.Model.PhanCong>
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("Them1kenh", "GiaTriTruocHieuChinh", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>GIÁ TRỊ TRƯỚC HIỆU CHỈNH (1 KÊNH)</strong></h3>
                </div>
            </div>
             <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td rowspan="2" style="vertical-align:middle;text-align:center">
                            <strong>Chọn kênh</strong>
                            @Html.DropDownList("ids[" + i + "].BuocSong", new[] { new SelectListItem { Text = "UV-A", Value = "UV-A" }, new SelectListItem { Text = "UV-B", Value = "UV-B" }, new SelectListItem { Text = "UV-C", Value = "UV-C" }, new SelectListItem { Text = "UV-V", Value = "UV-V" } }, new { @class = "form-control" })
                        </td>
                        <td>
                            <strong>Reference (<i style="color:blue">Irradiance</i>)</strong><br />
                            @Html.TextBox("ids[" + i + "].Reference_1", "", new { @type = "number", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                            @Html.Hidden("ids[" + i + "].Id_PhanCong", Model[i].Id, new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Instrument (<i style="color:blue">Irradiance</i>)</strong><br />
                            @Html.TextBox("ids[" + i + "].Instrument_1", "", new { @type = "number", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <strong>Reference (<i style="color:blue">Energy Density</i>)</strong><br />
                            @Html.TextBox("ids[" + i + "].Reference_2", "", new { @type = "number", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Instrument (<i style="color:blue">Energy Density</i>)</strong><br />
                            @Html.TextBox("ids[" + i + "].Instrument_2", "", new { @type = "number", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>

                }
            </table>
             <div class="row">
                 <div class="col-md-2" style="width: auto;">
                     <button class="form-control form-a-control" type="submit" value="Edit">
                         <span class="fas fa-edit"> OK</span>
                     </button>
                 </div>
                 <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                     <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                 </div>
             </div>
        </div>
    </section>
}

