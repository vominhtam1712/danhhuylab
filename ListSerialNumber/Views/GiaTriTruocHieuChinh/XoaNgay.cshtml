@model List<ListClass.Model.NgayTaoTechnicialBuldTruocHieuChinh>
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("XoaNgay", "GiaTriTruocHieuChinh", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:red"><strong>BẠN CÓ CHẮC MUỐN XÓA NGÀY NÀY KHÔNG?</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <strong>Ngày (<i style="color:blue">Date</i>)</strong><br />
                            @Html.Hidden("ids[" + i + "].Id_PhanCong", Model[i].Id_PhanCong, new { @readonly = "readonly", @class = "form-control" })
                            @Model[i].NgayTao.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <strong>Technicial</strong><br />
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Model[i].Technicial
                        </td>
                        <td>
                            <strong>Lamp System</strong><br />
                            @Model[i].LampSystem.Lamp_Systems
                        </td>
                        <td>
                            <strong>Bulb/Spectrum</strong><br />
                            @Model[i].BulbSpectrum.Bulb_Spectrum
                        </td>
                    </tr>

                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

