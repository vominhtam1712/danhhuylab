@model IEnumerable<ListClass.Model.Join_STD_DUT_Bienbanhieuchuan>
@{
    var distinctItems = Model
        .GroupBy(x => x.Id_BienBanHieuChuan)
        .Select(g => g.FirstOrDefault())
        .ToList();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bảng với 3 Hàng trong Cột 3</title>
    <style>
        .table {
            display: flex;
            width: 100%;
            border: 1px solid #000;  
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .column {
            padding: 10px;
            border-right: 1px solid #000;  
            box-sizing: border-box; 
        }

            .column:last-child {
                border-right: none;  
            }

        .col1 {
            flex: 1 1 20%; 
        }

        .col2 {
            flex: 3 1 55%;  
        }

        .col3 {
            flex: 1 1 25%; 
            display: flex;
            flex-direction: column;  
            justify-content: space-between; 
        }

        .row-1 {
            border-bottom: 1px solid #000;  
            padding: 5px;  
        }

        .row-2 {
            border-bottom: 1px solid #000;  
            padding: 5px; 
        }

        .row-3 {
            padding: 5px;  
        }

        .row:last-child {
            border-bottom: none;  
        }

        .container {
            margin-top: 20px;
        }

        .table-container {
            display: flex; 
            justify-content: space-between; 
            width: 100%;
        }

        table {
            width: 100%;  
            border-collapse: collapse;
        }

        .cell {
            border: 1px solid #000;
            padding: 10px;
            text-align: center;
            background-color: transparent;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="table" style="width:90%; margin-left:6%;height:125px;margin-top:5%">
        <div class="column col1">
            <img src="https://danhhuylab.vn/Public/Img/logo.png" width="100%" height="70%" style="margin-top:25px" />
        </div>
        <div class="column col2">
            <div class="row" style="margin-top:3%">
                <h3 style="margin-left:16%;"><strong>QUY TRÌNH HIỆU CHUẨN THIẾT BỊ</strong></h3>
                <h4 style="margin-left:14%;"><strong>BẢNG KIỂM TRA ĐỘ ỔN ĐỊNH CỦA THIẾT BỊ</strong></h4>
            </div>
        </div>
        <div class="column col3">
            <div class="row-1" style="margin-left: -10px; width: 218px ">
                Mã số: DH-QT04/BM07
            </div>
            <div class="row-2" style="margin-left: -10px; width: 218px "> Số soát xét: 02</div>
            <div class="row-3" style="margin-left: -10px; width: 218px ">Ngày hiệu lực: 27/03/2024</div>
        </div>
    </div>
    @foreach (var item in distinctItems)
    {
        <div class="container" style="margin-left: 6%;">
            Ngày kiểm tra: @Html.DisplayFor(modelItem => item.NgayThucHien)
        </div>
    }
    <div class="container">
        <div class="table-container" style="width: 90%; margin-left: 6%;">
            <table>
                <tr>
                    <td>Mức kiểm tra</td>
                    <td>Lần 1</td>
                    <td>Lần 2</td>
                    <td>Lần 3</td>
                    <td>Lần 4</td>
                    <td>Lần 5</td>
                    <td>Min</td>
                    <td>Max</td>
                    <td>Độ ổn định</td>
                    <td>TB STD</td>
                    <td>U<sub>od</sub>(%)</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MucKiemTra_STD</td>
                        <td>@item.Lan1_STD</td>
                        <td>@item.Lan2_STD</td>
                        <td>@item.Lan3_STD</td>
                        <td>@item.Lan4_STD</td>
                        <td>@item.Lan5_STD</td>
                        <td>@item.Min_STD</td>
                        <td>@item.Max_STD</td>
                        <td>@item.DoOnDinh_STD.Value.ToString("F3")</td>
                        <td>@item.TrungBinh_STD.Value.ToString("F3")</td>
                        <td>@item.U_STD.Value.ToString("F2")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="container" style="margin-top:50px">
        <div class="row" style="margin-left:17%">
            <strong>
                NGƯỜI LẬP BIỂU &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                NGƯỜI PHÊ DUYỆT
            </strong>
        </div>
    </div>
</body>
</html>

