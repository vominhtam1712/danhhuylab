@model List<ListClass.Model.BienBanHieuChuan> 
@using (Html.BeginForm("Upload", "STD_DUT", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>THÊM STD & DUT TỪ EXCEL</strong></h3>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="row py-1">
                    <div class="col-md-6">
                        <input type="file" name="file" required />
                    </div>
                </div>
            </div>
            <form method="post" enctype="multipart/form-data">
                <table class="table table-bordered table-striped">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <strong>STD_Cer</strong><br />
                                @Html.TextBox("STD_DUTs[" + i + "].STD_Cer_STD", "", new { @class = "form-control", type = "number", step = "0.001", @required = "required", data_val_required = "Trường này là bắt buộc" })
                            </td>
                            <td>
                                <strong>STD_Spec</strong><br />
                                @Html.TextBox("STD_DUTs[" + i + "].STD_Spec_STD", "", new { @class = "form-control", type = "number", step = "0.001", @required = "required", data_val_required = "Trường này là bắt buộc" })
                            </td>
                            <td>
                                <strong>Độ phân giải</strong><br />
                                @Html.TextBox("STD_DUTs[" + i + "].DoPhanGiai_DUT", "", new { @class = "form-control", type = "number", step = "0.001", @required = "required", data_val_required = "Trường này là bắt buộc" })
                                @Html.Hidden("STD_DUTs[" + i + "].Id_BienBanHieuChuan", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                                @Html.Hidden("STD_DUTs[" + i + "].Id_PhanCong", Model[i].Id_PhanCong, new { @readonly = "readonly", @class = "form-control" })
                            </td>
                        </tr>
                    }
                </table>
            </form>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

