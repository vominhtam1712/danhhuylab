@{
    ViewBag.Title = "Thêm từ Excel";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@using (Html.BeginForm("Upload", "ListNumber", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="content-wrapper">
        <section>
            <div class="container" style="margin-top:20px">
                <strong>THÊM SẢN PHẨM TỪ EXCEL</strong>
            </div> 
        </section>
        <!-- Main content -->
        <section class="content py-2">
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-2" style="width:auto">
                                    <a class="form-control" style="text-decoration:none;" href="@Url.Action("Index","ListNumber")"><span class="fas fa-backward"> Trở về</span></a>
                                </div>
                                <div class="col-md-2" style="width: auto;">
                                    <a class="form-control" style="text-decoration:none;" href="@Url.Action("Create","ListNumber")"><span class="fas fa-plus"> Thêm mới</span></a>
                                </div>
                                <div class="col-md-2" style="width: auto;">
                                    <a class="form-control" style="text-decoration:none;" href="@Url.Action("Themnhieu","ListNumber")"><span class="fas fa-upload"> Thêm từ Excel</span></a>
                                </div>
                                <div class="col-md-2" style="margin-top:10px">
                                    @Html.Partial("Message")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <div class="row py-1">
                                <div class="col-md-6">
                                    <input type="file" name="file" required />
                                    <input type="submit" value="Upload" />
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </section> 
    </div>
}