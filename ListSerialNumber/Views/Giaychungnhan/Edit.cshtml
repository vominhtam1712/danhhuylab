@model List<ListClass.Model.Giaychungnhan>

@using (Html.BeginForm("Edit", "Giaychungnhan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3 style="color:blue"><strong>CHỈNH SỬA GIẤY CHỨNG NHẬN</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Html.Hidden("ids[" + i + "].Id_BienBanHieuChuan", Model[i].Id_BienBanHieuChuan, new { @readonly = "readonly", @class = "form-control" })
                            <strong>Ngày hiệu chuẩn</strong><br />
                            @Html.TextBox("ids[" + i + "].NgayHieuChuan", Model[i].NgayHieuChuan.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Ngày hiệu chuẩn lại (Y/C khách hàng)</strong><br />
                            @Html.TextBox("ids[" + i + "].NgayHieuChuanLai", Model[i].NgayHieuChuanLai.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td> 
                        <td>
                            <strong>Kiểu In</strong><br />
                            @Html.DropDownList("ids[" + i + "].Type",
                                new SelectList(new[] {
                                    new SelectListItem { Text = "Chọn kiểu In GCN", Value = "" },
                                    new SelectListItem { Text = "In tất cả dữ liệu", Value = "All" },
                                    new SelectListItem { Text = "In 2 trang (Đầu và cuối)", Value = "One" }
                                }, "Value", "Text", Model[i].Type),
                                new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeEditModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div> 
            </div>
        </div>
    </section>
}
