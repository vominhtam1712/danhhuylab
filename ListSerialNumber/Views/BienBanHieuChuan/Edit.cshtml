@model List<ListClass.Model.BienBanHieuChuan>
@using (Html.BeginForm("Edit", "BienBanHieuChuan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>CHỈNH SỬA BIÊN BẢN HIỆN CHUẨN</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="center">
                        <th colspan="8">#</th>
                    </tr>
                    <tr>
                        <td>
                            <label>Mã phiếu</label>
                            @Html.Hidden("bienbanhieuchuans[" + i + "].Id_PhanCong", Model[i].Id_PhanCong, new { @readonly = "readonly", @class = "form-control" })
                            @Html.Hidden("bienbanhieuchuans[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Html.TextBox("bienbanhieuchuans[" + i + "].MaBienBan", Model[i].MaBienBan, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                        <td>
                            <label>Nhiệt độ</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].NhietDo", Model[i].NhietDo, new { @class = "form-control", @required = "required" })
                        </td>
                        <td>
                            <label>Độ ẩm</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].DoAm", Model[i].DoAm, new { @class = "form-control", @required = "required" })
                        </td>
                        <td>
                            <label>Tên hiệu chuẩn</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].TenHieuChuan", Model[i].TenHieuChuan, new { @class = "form-control", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Số SN</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].SN", Model[i].SN, new { @class = "form-control", type = "number", @required = "required" })
                        </td>
                        <td>
                            <label>Cal_Date</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].Cal_Date", Model[i].Cal_Date.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <label>Due_Day</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].Due_Day", Model[i].Due_Day.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <label>Ngày thực hiện</label><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].NgayThucHien", Model[i].NgayThucHien.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

