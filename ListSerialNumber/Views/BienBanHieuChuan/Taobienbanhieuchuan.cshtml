@model List<ListClass.Model.PhanCong> 
@using (Html.BeginForm("Taobienbanhieuchuan", "BienBanHieuChuan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>TẠO BIÊN BẢN HIỆN CHUẨN</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="center">
                        <th colspan="8">#</th>
                    </tr>
                    <tr>
                        <td>
                            <strong>Nhiệt độ</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].NhietDo", "", new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Độ ẩm</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].DoAm", "", new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Tên TB Master (ISO)</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].TenHieuChuan", "", new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Số SN Master (ISO)</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].SN", "", new { @class = "form-control", type = "number", @required = "required", data_val_required = "Trường này là bắt buộc" })
                            @Html.Hidden("bienbanhieuchuans[" + i + "].Id_PhanCong", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Cal. Date</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].Cal_Date", "", new { @type = "date", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Due. Date</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].Due_Day", "", new { @type = "date", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                        <td>
                            <strong>Ngày thực hiện</strong><br />
                            @Html.TextBox("bienbanhieuchuans[" + i + "].NgayThucHien", "", new { @type = "date", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

