@model List<ListClass.Model.ChuanSuDung>
@using (Html.BeginForm("Delete", "ChuanSuDung", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:red"><strong>BẠN CÓ CHẮC MUỐN XÓA KHÔNG?</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>STT</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Serial No.</th>
                    <th>Cetificate No.</th>
                    <th>Cal. Date</th>
                    <th>Cal. Due</th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model.ElementAt(i);
                    <tr>
                        <td style="width:150px">
                            @(i+1)
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Html.Hidden("ids[" + i + "].Id_PhanCong", Model[i].Id_PhanCong, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                        <td style="width:100px">
                            @item.Model
                        </td>
                        <td style="width:200px">
                            @item.Description
                        </td>
                        <td style="width:200px">
                            @item.Serial
                        </td>
                        <td style="width:200px">
                            @item.Cetificate
                        </td>
                        <td style="width:200px">
                            @item.Cal_Date.ToString("dd/MM/yyyy")
                        </td>
                        <td style="width:200px">
                            @item.Cal_Due.ToString("dd/MM/yyyy")
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

