@model List<ListClass.Model.DanhMucThietBi>
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("Edit", "DanhMucThietBi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>CHỈNH SỬA THIẾT BỊ</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th colspan="3">Tên thiết bị: @Model[i].TenThietBi</th>
                    </tr>
                    <tr>
                        <td>
                            <strong>Số SN</strong>
                            @Html.TextArea("listnumbers[" + i + "].Serial", Model[i].Serial, new { @class = "form-control" })
                        </td>
                        <td>
                            <strong>Tên thiết bị</strong>
                            @Html.TextArea("listnumbers[" + i + "].TenThietBi", Model[i].TenThietBi, new { @class = "form-control" })
                        </td>
                        <td>
                            <strong>Mã thiết bị</strong>
                            @Html.TextArea("listnumbers[" + i + "].MaThietBi", Model[i].MaThietBi, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Hãng sản xuất</strong>
                            @Html.TextArea("listnumbers[" + i + "].HangSX", Model[i].HangSX, new { @class = "form-control" })
                            @Html.Hidden("listnumbers[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                        <td>
                            <strong>Ngày đưa vào sử dụng</strong>
                            @Html.TextBox("listnumbers[" + i + "].NgayDuaVaoSuDung", Model[i].NgayDuaVaoSuDung.ToString("yyyy-MM-ddTHH:mm"), new { @type = "datetime-local", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                        </td>  
                    </tr>

                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div> 
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeEditModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}