@model List<ListClass.Model.PhanCong>
@using (Html.BeginForm("Upload", "KetQuaHieuChinh", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>KẾT QUẢ HIỆU CHỈNH (EXCEL 1 KÊNH & 4 KÊNH)</strong></h3>
                    <h5><i>Chỉ nhận file: .xls, .xlsx ,.xlsm,.xlsb,.xltx,.xltm</i></h5>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="row py-1" style="text-align:center">
                    <div class="col-md-12">
                        <input type="file" name="file" accept=".xls, .xlsx ,.xlsm,.xlsb,.xltx,.xltm" required />
                    </div>
                </div>
                <div class="row" style="justify-content:center">
                    <div class="col-md-1">
                        <button class="form-control form-a-control" type="submit" value="Edit">
                            <span class="fas fa-edit"> OK</span>
                        </button>
                    </div>
                </div>
            </div>
            <form method="post" enctype="multipart/form-data">
                <table class="table table-bordered table-striped">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        @Html.Hidden("ids[" + i + "].Id_PhanCong", Model[i].Id, new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                    }
                </table>
                <div class="col-md-2" style="width:auto;position:absolute;left:0;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </form> 
        </div>
    </section>
}

