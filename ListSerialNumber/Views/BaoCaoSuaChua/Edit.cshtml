@model List<ListClass.Model.BaoCaoSuaChua>
@using (Html.BeginForm("Edit", "BaoCaoSuaChua", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>CHỈNH SỬA BÁO CÁO SỬA CHỮA THIẾT BỊ</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="center">
                        <th colspan="2">#</th>
                    </tr>
                    <tr>
                        <td width="150px">
                            <strong>Mã báo cáo</strong><br />
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Html.Hidden("ids[" + i + "].Id_giaychungnhan", Model[i].Id_giaychungnhan, new { @readonly = "readonly", @class = "form-control" })
                            @Html.TextBox("ids[" + i + "].MaBaoCao", Model[i].MaBaoCao, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                        <td>
                            <strong>Các hạng mục sửa chữa</strong><br />
                            @Html.TextArea("ids[" + i + "].CacHangSuDung", Model[i].CacHangSuDung, new { @class = "form-control", @style = "height:200px", data_val_required = "Trường này là bắt buộc" })
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeEditModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div> 
            </div>
        </div>
    </section>
} 