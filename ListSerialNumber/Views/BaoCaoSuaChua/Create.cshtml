@model ListClass.Model.BaoCaoSuaChua
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("Create", "BaoCaoSuaChua", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-12" style="text-align:center">
                        <h3 style="color:blue"><strong>THÊM BÁO CÁO SỮA CHỮA THIẾT BỊ</strong></h3>
                    </div>
                </div>
                <div class="row py-1">
                    <div class="col-md-5">
                        <div class="form-group">
                            <strong class="control-label col-md-3">Chọn giấy chứng nhận</strong>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.Id_giaychungnhan, (SelectList)ViewBag.Phieunhan, "Chọn giấy CN...", new { @class = "form-control", id = "idDropdown", required = "required" })
                                @Html.ValidationMessageFor(model => model.Id_giaychungnhan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <strong class="control-label col-md-3">Các hạng mục sửa chữa</strong>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.CacHangSuDung, new { @class = "form-control", @required = "required", style = "height:200px" })
                                @Html.ValidationMessageFor(model => model.CacHangSuDung, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div id="customerInfo" style="display:none; margin-top:20px">
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th>Mã KH</th>
                                    <th>Tên KH</th>
                                    <th>Địa chỉ</th>
                                    <th>Ngành</th>
                                </tr>
                                <tr>
                                    <td><span style="color:blue" id="customerMaKH"></span></td>
                                    <td><span style="color:blue" id="customerTenKH"></span></td>
                                    <td><span style="color:blue" id="customerDiaChi"></span></td>
                                    <td> <span style="color:blue" id="customerNganh"></span></td>
                                </tr>
                                <tr>
                                    <th>Số SN</th>
                                    <th>Tên thiết bị</th>
                                    <th>Hãng</th>
                                    <th>Model</th>
                                </tr>
                                <tr>
                                    <td><span style="color:blue" id="customerSN"></span></td>
                                    <td><span style="color:blue" id="customerTB"></span></td>
                                    <td><span style="color:blue" id="customerHang"></span></td>
                                    <td> <span style="color:blue" id="customerModel"></span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2" style="width: auto;">
                        <button class="form-control form-a-control" type="submit" value="Edit">
                            <span class="fas fa-edit"> OK</span>
                        </button>
                    </div>
                    <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                        <a style="text-decoration:none;" href="#" onclick="closeAddModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                    </div> 
                </div>
            </div>
        </div>
    </section> 
} 