@model IEnumerable<ListClass.Model.join_PhieuTheoDoiNhietDo_DanhSachPhieuTheoDoiNhietDo>
@{
    var distinctItems = Model
        .GroupBy(x => x.Id_PhieuTheoDoiNhietDo)
        .Select(g => g.FirstOrDefault())
        .ToList();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bảng với 3 Hàng trong Cột 3</title>
    <style>
        .table {
            display: flex;
            width: 100%;
            border: 1px solid #000; 
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .column {
            padding: 10px;
            border-right: 1px solid #000; 
            box-sizing: border-box;  
        }

            .column:last-child {
                border-right: none;  
            }

        .col1 {
            flex: 1 1 20%; 
        }

        .col2 {
            flex: 3 1 55%; 
        }

        .col3 {
            flex: 1 1 25%; 
            display: flex;
            flex-direction: column; 
            justify-content: space-between; 
        }

        .row-1 {
            border-bottom: 1px solid #000;  
            padding: 5px; 
        }

        .row-2 {
            border-bottom: 1px solid #000; 
            padding: 5px;  
        }

        .row-3 {
            padding: 5px; 
        }

        .row:last-child {
            border-bottom: none;  
        }

        .container {
            margin-top: 20px;
        }

        .table-container {
            display: flex;  
            justify-content: space-between; 
            width: 100%;
        }

        table {
            width: 100%;  
            border-collapse: collapse;
        }

        .cell {
            border: 1px solid #000;
            padding: 10px;
            text-align: center;
            background-color: transparent;
        }

        td {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="table" style="width:90%; margin-left:6%;height:125px;">
        <div class="column col1">
            <img src="https://danhhuylab.vn/Public/Img/logo.png" width="100%" height="70%" style="margin-top:25px" />
        </div>
        <div class="column col2">
            <div class="row" style="margin-left:7%;margin-top:-10px">
                <h3><strong>QUY TRÌNH QUẢN LÝ HIỆU CHUẨN THIẾT BỊ</strong></h3>
            </div>
            <div class="row" style="margin-left:30%;margin-top:3%">
                <h2>
                    <strong>
                        PHIẾU THEO DÕI<br />
                        NHIỆT ĐỘ - ĐỘ ẨM
                    </strong>
                </h2>
            </div>
        </div>
        <div class="column col3">
            <div class="row-1" style="margin-left: -10px; width: 218px ">
                Mã số: DH-QT04/BM06
            </div>
            <div class="row-2" style="margin-left: -10px; width: 218px "> Số soát xét: 02</div>
            <div class="row-3" style="margin-left: -10px; width: 218px ">Ngày hiệu lực: 27/03/2024</div>
        </div>
    </div>
    <div class="container" style="width:90%; margin-left:6%">
        @foreach (var item in distinctItems)
        {
            <div class="row">
                <p>Mã số nhiệt ẩm kế/ Model No: <strong>@Html.DisplayFor(modelItem => item.MSNhietKe_Model_No)</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Phòng: @Html.DisplayFor(modelItem => item.Phong)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Tháng: @item.Thang_Nam.ToString("MM")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Năm: @item.Thang_Nam.ToString("yyyy")</p>
            </div>
            <div class="row">
                <p>Khoảng chấp nhận: Nhiệt độ (&#186;C): @item.NhietDo_Dau.Value.ToString("F0") - @item.NhietDo_Sau.Value.ToString("F0") &#186;C &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; - Độ ẩm (%): @item.DoAm.Value.ToString("F0")%</p>
            </div>
        }
    </div>
    <div class="container" style="margin-top:20px">
        <table style="width: 90%;height:50% ;margin-left: 6%">
            <tr>
                <td>Ngày</td>
                <td>Nhiệt độ ghi nhận lúc :<br /> 7giờ 30 (&#186;C)</td>
                <td>Độ ẩm ghi nhận lúc :<br /> 7giờ 30 (%)</td>
                <td>Nhiệt độ ghi nhận lúc :<br /> 17giờ 30 (&#186;C)</td>
                <td>Độ ẩm ghi nhận lúc :<br /> 17giờ 30 (%)</td>
                <td>Kết luận</td>
                <td>Người kiểm tra</td>
            </tr>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ngay_kiem_tra)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.NhietDo_Sang)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.DoAm_Sang)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.NhietDo_Chieu)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.DoAm_Chieu)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.KetLuan)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.NguoiKiemTra)
                        </td>
                    </tr>
                }
            }
            <tr>
        </table>
    </div>
    <div class="container" style="margin-top:50px">
        <div class="row" style="margin-left:6%">
            <strong>
                Kết luận:  Nếu nhiệt độ và độ ẩm nằm trong giới hạn kiểm soát, kết luận “ đạt”
            </strong>
        </div>
    </div>
</body>
</html>
