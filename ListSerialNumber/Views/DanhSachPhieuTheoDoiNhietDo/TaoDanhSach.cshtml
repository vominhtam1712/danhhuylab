@model List<ListClass.Model.PhieuTheoDoiNhietDo>
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("TaoDanhSach", "DanhSachPhieuTheoDoiNhietDo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>THÊM NHIỆT ĐỘ PHÒNG LAB</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">

                <tr class="center">
                    <th>Ngày</th>
                    <th>Nhiệt độ: 7giờ 30(&#176;C)</th>
                    <th>Độ ẩm:7 giờ 30(&#37;)</th>
                    <th>Nhiệt độ: 17giờ 30(&#176;C)</th>
                    <th>Độ ẩm: 17 giờ 30(&#37;)</th>
                    <th>Kết luận</th>
                    <th width="190px">Người kiểm tra</th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td width="120px">
                            @Html.Hidden("DanhSachPhieuTheoDoiNhietDos[" + i + "].ID_PhieuTheoDoiNhietDo", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            @Html.TextBox("DanhSachPhieuTheoDoiNhietDos[" + i + "].Ngay_theo_doi", "", new { @class = "form-control", type = "number" })
                        </td>
                        <td>
                            @Html.TextBox("DanhSachPhieuTheoDoiNhietDos[" + i + "].NhietDo_Sang", "", new { @class = "form-control", type = "number", step = "0.001" })
                        </td>
                        <td>
                            @Html.TextBox("DanhSachPhieuTheoDoiNhietDos[" + i + "].DoAm_Sang", "", new { @class = "form-control", type = "number", step = "0.001" })
                        </td>
                        <td>
                            @Html.TextBox("DanhSachPhieuTheoDoiNhietDos[" + i + "].NhietDo_Chieu", "", new { @class = "form-control", type = "number", step = "0.001" })
                        </td>
                        <td>
                            @Html.TextBox("DanhSachPhieuTheoDoiNhietDos[" + i + "].DoAm_Chieu", "", new { @class = "form-control", type = "number", step = "0.001" })
                        </td>
                        <td width="130px">
                            @Html.DropDownList("DanhSachPhieuTheoDoiNhietDos[" + i + "].KetLuan",
                            new[] { new SelectListItem { Text = "Chưa đạt", Value = "Chưa đạt" },
                                new SelectListItem { Text = "Đạt", Value = "Đạt" } },
                            new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.DropDownList("DanhSachPhieuTheoDoiNhietDos[" + i + "].NguoiKiemTra", (SelectList)ViewBag.Nhanvien, "Người kiểm tra...", new { @class = "form-control", id = "idDropdown", @Required = "Required" })
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div> 
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeAddModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

