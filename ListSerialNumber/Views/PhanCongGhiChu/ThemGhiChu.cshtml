@model List<ListClass.Model.PhanCong> 
@using (Html.BeginForm("ThemGhiChu", "PhanCongGhiChu", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>THÊM GHI CHÚ</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="center">
                        <th>#</th>
                    </tr>
                    <tr>
                        <td class="text-center">
                            @Html.TextArea("ids[" + i + "].GhiChu", "", new { @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc", style = "height:100px" })
                            @Html.Hidden("ids[" + i + "].Id_PhanCong", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                    </tr>

                }
            </table> 
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
} 
