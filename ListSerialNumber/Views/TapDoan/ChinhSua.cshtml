@model List<ListClass.Model.TapDoan>
@using (Html.BeginForm("ChinhSua", "TapDoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:red"><strong>CHỈNH SỬA TẬP ĐOÀN</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped" style="margin-top:10px">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td width="250px">
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            <strong>Tên tập đoàn</strong> 
                            @Html.TextBox("ids[" + i + "].Tentapdoan", Model[i].Tentapdoan, new { @class = "form-control"})
                        </td>
                    </tr>

                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a href="@Url.Action("Index","TapDoan")"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

