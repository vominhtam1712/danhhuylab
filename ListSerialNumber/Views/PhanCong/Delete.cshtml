@model List<ListClass.Model.PhanCong>
@using (Html.BeginForm("Delete", "PhanCong", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:red"><strong>BẠN CÓ CHẮC MUỐN XÓA KHÔNG?</strong></h3>
                </div>
            </div>
            <div class="row" style="overflow-x:auto;">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Mã phân công</th>
                        <th>Số SN</th>
                        <th>Số nhận dạng</th>
                        <th>Model</th>
                        <th>Tên công ty</th>
                        <th style="width:200px">Tên nhân viên</th>
                    </tr>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model.ElementAt(i);
                        <tr>
                            <td>
                                @Model[i].MaPC
                                @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                            </td>
                            <td>
                                @Model[i].Phieuyeucauhieuchuan.PhieuNhanThietBi.ListNumber.SerialNumber
                            </td>
                            <td>
                                @Model[i].Phieuyeucauhieuchuan.PhieuNhanThietBi.SoNhanDang
                            </td>
                            <td>
                                @Model[i].Phieuyeucauhieuchuan.PhieuNhanThietBi.ListNumber.Model
                            </td>
                            <td>
                                @Model[i].Phieuyeucauhieuchuan.PhieuNhanThietBi.ListNumber.KhachHang.TenKH
                            </td>
                            <td style="width:200px">
                                @Model[i].Company.Name
                            </td>

                        </tr>
                    }
                </table>
                <div class="row">
                    <div class="col-md-2" style="width: auto;">
                        <button class="form-control form-a-control" type="submit" value="Edit">
                            <span class="fas fa-edit"> OK</span>
                        </button>
                    </div>
                    <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                        <a href="@Url.Action("Index","PhanCong")"><img src="~/Public/Img/close.png" width="40" /></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

