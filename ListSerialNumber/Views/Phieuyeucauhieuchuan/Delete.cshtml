@model List<ListClass.Model.Phieuyeucauhieuchuan>
@using (Html.BeginForm("Delete", "Phieuyeucauhieuchuan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:red"><strong>BẠN CÓ CHẮC MUỐN XÓA KHÔNG?</strong></h3>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <tr>
                    <th width="40px">STT</th>
                    <th>Mã phiếu</th>
                    <th>Địa chỉ hiệu chuẩn</th>
                    <th>Tên công ty (<i style="color:red">Xuất hóa đơn</i>)</th>
                    <th>Địa chỉ công ty (<i style="color:red">Xuất hóa đơn</i>)</th>
                    <th>Mã số thuế</th>
                    <th>Số lượng</th>
                    <th>Dịch vụ yêu cầu</th>
                    <th>Nơi thực hiện</th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model.ElementAt(i);
                    <tr>
                        <td>
                            @(i+1)
                            @Html.Hidden("ids[" + i + "].Id", Model[i].Id, new { @readonly = "readonly", @class = "form-control" })
                        </td>
                        <td>
                            @item.MaPhieu
                        </td>
                        <td>
                            @item.Diachihieuchuan
                        </td>
                        <td>
                            @item.Tencognty
                        </td>
                        <td>
                            @item.Diachicongty
                        </td>
                        <td>
                            @item.Masothue
                        </td>
                        <td>
                            @item.Soluong
                        </td>
                        <td>
                            @item.Dichvuyeucau
                        </td>
                        <td>
                            @item.Danhhuy
                        </td>
                    </tr>
                }
            </table>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div>
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a href="@Url.Action("Index","Phieuyeucauhieuchuan")"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}

