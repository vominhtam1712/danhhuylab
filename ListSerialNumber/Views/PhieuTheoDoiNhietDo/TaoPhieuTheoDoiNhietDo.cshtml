@model ListClass.Model.PhieuTheoDoiNhietDo
<script src="~/Public/Js/DropDownSelect.js"></script>
@using (Html.BeginForm("TaoPhieuTheoDoiNhietDo", "PhieuTheoDoiNhietDo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content py-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="text-align:center">
                    <h3 style="color:blue"><strong>TẠO PHIẾU THEO DÕI NHIỆT ĐỘ</strong></h3>
                </div>
            </div>
            <div class="form-horizontal" style="margin-bottom:10px">
                <div class="row py-1">
                    <div class="col-md-4">
                        <div class="form-group">
                            <strong class="control-label col-md-3">Mã số nhiệt kế/Model No</strong>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.MSNhietKe_Model_No, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MSNhietKe_Model_No, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <strong class="control-label col-md-3">Phòng</strong>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Phong, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Phong, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group">
                                <strong class="control-label col-md-3">Ngày / tháng / năm</strong>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Thang_Nam, new { @type = "date", @class = "form-control", @required = "required", data_val_required = "Trường này là bắt buộc" })
                                    @Html.ValidationMessageFor(model => model.Phong, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <strong class="control-label col-md-3">Độ ẩm</strong>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.DoAm, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DoAm, "", new { @class = "text-danger", step = "0.001" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <strong class="control-label col-md-3">Khoản chấp nhận nhiệt độ (<i style="color:red">Đầu</i>)</strong>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.NhietDo_Dau, new { @class = "form-control", @type = "number", step = "0.001" })
                                @Html.ValidationMessageFor(model => model.NhietDo_Dau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <strong class="control-label col-md-3">Khoản chấp nhận nhiệt độ (<i style="color:red">Cuối</i>)</strong>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.NhietDo_Sau, new { @class = "form-control", @type = "number", step = "0.001" })
                                @Html.ValidationMessageFor(model => model.NhietDo_Sau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-2" style="width: auto;">
                    <button class="form-control form-a-control" type="submit" value="Edit">
                        <span class="fas fa-edit"> OK</span>
                    </button>
                </div> 
                <div class="col-md-2" style="width:auto;position:absolute;left:-12px;top:0">
                    <a style="text-decoration:none;" href="#" onclick="closeAddModal()"><img src="~/Public/Img/close.png" width="40" /></a>
                </div>
            </div>
        </div>
    </section>
}