@model IEnumerable<ListClass.Model.Join_Baocaodanhgia_thietbi>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bảng với 3 Hàng trong Cột 3</title>
    <style>
        .header{
            display:flex;
            justify-content:space-between;
            border:1px solid #000;
        }
        .header-content img{
            width:180px;
        }
        .header-content:nth-child(1)
        {
            display:flex; 
            justify-content:center; 
            align-items:center; 
            width:25%;
        }
        .header-content:nth-child(2) {
            border-left: 1px solid #000;
            border-right: 1px solid #000;
            text-align: center;
            width: 50%; 
            display:flex;
            justify-content:center;
            align-items:center
        }
        .header-content:nth-child(3) {
            width: 25%;
        }
        .header-content-text:nth-child(2){
            border-top:1px solid #000;
            border-bottom:1px solid #000;
        }
        .header-content-text{
            padding:10px
        }
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            margin-top:25px
        }

        td, th {
            border: 1px solid #000;
            text-align: left;
            padding: 8px;
        }
        .row{
            display:flex;
            margin-top:25px
        }
        .col-md-5{
            width:50%;
            text-align:center
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <img src="https://danhhuylab.vn/Public/Img/logo.png" />
        </div>
        <div class="header-content">
            <h3>QUY TRÌNH QUẢN LÝ THIẾT BỊ<br />BÁO CÁO ĐÁNH GIÁ KẾT QUẢ HIỆU CHUẨN</h3>
        </div>
        <div class="header-content">
            <div class="header-content-text">Mã số: VN-P03/F03</div>
            <div class="header-content-text">Số soát xét: 02</div>
            <div class="header-content-text">Ngày hiệu lực: 01/10/2023</div>
        </div>
    </div>
    <table>
        <tr>
            <td>1</td>
            <td>Tên thiết bị</td>
            @foreach (var item in Model)
            {
                <td>@item.TenThietBi</td>
            }
        </tr>
        <tr>
            <td>2</td>
            <td>Mã thiết bị</td>
            @foreach (var item in Model)
            {
                <td>@item.MaThietBi</td>
            }
        </tr>
        <tr>
            <td>3</td>
            <td>Thiết bị/ hoá chất hiệu chuẩn</td>
            @foreach (var item in Model)
            {
                <td>@item.ThietBi_HoaChatHieuChuan</td>
            }
        </tr>
        <tr>
            <td>4</td>
            <td>Ngày hiệu chuẩn</td>
            @foreach (var item in Model)
            {
                <td>@item.NgayHieuChuan.ToString("dd/MM/yyyy")</td>
            }
        </tr>
        <tr>
            <td>5</td>
            <td>Kết quả hiệu chuẩn</td>
            @foreach (var item in Model)
            {
                <td>@item.KetQuaHC</td>
            }
        </tr>
        <tr>
            <td>6</td>
            <td>Kết luận</td>
            @foreach (var item in Model)
            {
                <td>@item.KetLuan</td>
            }
        </tr>
        <tr>
            <td>7</td>
            <td>Ngày hiệu chuẩn kế tiếp</td>
            @foreach (var item in Model)
            {
                <td>@item.NgayHieuChuanKeTiep.ToString("dd/MM/yyyy")</td>
            }
        </tr>
    </table> 
    <div class="row">
        <div class="col-md-5"><strong>NGƯỜI LẬP BIỂU</strong></div>
        <div class="col-md-5"><strong>PHÊ DUYỆT BỞI</strong></div>
    </div> 
</body>
</html>
